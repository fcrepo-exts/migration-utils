    <bean id="directoryScanningIDResolver" class="org.fcrepo.migration.foxml11.DirectoryScanningIDResolver">
        <constructor-arg value="/Users/xw7/Applications/workspace/migration-utils/target/index"/>
        <constructor-arg value ="/Users/xw7/Applications/workspace/migration-utils/src/test/resources/datastreamStore" />
    </bean>

    <bean id="httpClientURLFetcher" class="org.fcrepo.migration.foxml11.HttpClientURLFetcher">
    </bean>
 
    <bean id="foxmlDirectoryObjectSource" class="org.fcrepo.migration.foxml11.FoxmlDirectoryObjectSource" init-method="init">    
        <property name="resolver" ref="directoryScanningIDResolver"/>
        <property name="fetcher" ref="httpClientURLFetcher"/>
        <property name="root" value="src/test/resources/info%3Afedora%2Fexample%3A1"/>
        <property name="objectStore" value="src/test/resources/info%3Afedora%2Fexample%3A1"/>
        <property name="datastreamStore" value="src/test/resources/datastreamStore"/>
        <property name="workingDir" value="target/index"/>
     </bean>
 
    <bean id="consoleLoggingStreamingFedoraObjectHandler" class="org.fcrepo.migration.handlers.ConsoleLoggingStreamingFedoraObjectHandler">
    </bean>

    <bean id="migrator" class="org.fcrepo.migration.Migrator">
        <property name="source" ref="foxmlDirectoryObjectSource" />
        <property name="handler" ref="consoleLoggingStreamingFedoraObjectHandler" />
    </bean>
